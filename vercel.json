{
  "builds": [
    { "src": "portfolio-website/static/**/*", "use": "@vercel/static" },
    { "src": "portfolio-website/app.py",      "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)",        "dest": "portfolio-website/app.py" }
  ]
}